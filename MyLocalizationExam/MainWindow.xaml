<Window x:Class="MyLocalizationExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{StaticResource AppName}" Height="350" Width="525"
        x:Name="MyWindow">
    <Grid>
        <StackPanel>
            <ComboBox SelectedIndex="{Binding Language}">
                <ComboBoxItem Content="{StaticResource ComboxItemKorean}"/>
                <ComboBoxItem Content="{StaticResource ComboxItemEnglish}"/>
            </ComboBox>
        </StackPanel>
        
        
    </Grid>
</Window>
